<Window x:Class="FocusStudy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusStudy"
        mc:Ignorable="d"
        Title="认真学习" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="btn_MonitorSwitch" Content="开始学习" Click="btn_MonitorSwitch_Click"></Button>
        <TextBox IsReadOnly="True"  Grid.Row="1" x:Name="lab_Message" TextWrapping="Wrap"></TextBox>
    </Grid>
</Window>
